{
	"name": "gen-template-viewer",
	"displayName": "gen_template_viewer",
	"description": "simple viewer for task generator templates",
	"version": "1.0.2",
	"engines": {
		"vscode": "^1.42.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.previewTemplate"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.previewTemplate",
				"title": "preview template"
			}
		],
		"languages": [
			{
				"id": "gentemp",
				"extensions": [
					".gentemp"
				]
			}
		],
		"grammars": [
			{
				"language": "gentemp",
				"scopeName": "source.gentemp",
				"path": "./syntaxes/gentemp.tmGrammar.json"
			}
		],
		"snippets": [
			{
				"language": "gentemp",
				"path": "./snippets/snippets.json"
			}
		],
		"keybindings": [
			{
				"key": "ctrl+d",
				"command": "extension.previewTemplate",
				"when": "resourceExtname == .gentemp && editorTextFocus"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.42.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.18.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	},
	"publisher": "PyatiyEtaj",
	"repository": {
		"type": "git",
		"url": "https://github.com/PyatiyEtaj/vscode-gen-template-viewer"
	}
}
